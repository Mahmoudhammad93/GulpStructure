include pug/head
  body
    include pug/navbar
    content.wrapper(style="background-color: #ddd")
      #plans
        .cover
          .overlay
            .cover-footer
              .breadcrumbs
                ul.list-unstyled
                  li|Home
                  li|Page Name
              .back
                span.btn-back|Back
        h4.special-title
            span.brand|Qaqarat 
            |Real-estate Developer
        p.plans-desc|Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s
        .plans-list
            .row
                - var plans = [{type:'Stander',price:'Free'},{type:'Business',price:'38'},{type:'Professional',price:'60'},]
                each plan in plans
                    .col-lg-4
                        .plan-box
                            .type
                                h4=plan.type
                            .info
                                .price
                                    h2=plan.price
                                        span.coins-info
                                            span.coins|QAR
                                            span.per|per month
                                ul.list-unstyled
                                    - var featuers = [1,2,3,4]
                                    each feature in featuers
                                        li|Feature number 0#{feature}
                                button|Join Now
include pug/footer